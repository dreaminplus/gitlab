- return unless can?(current_user, :read_environment, @project)

- setting = error_tracking_setting

%section.settings.no-animate.js-status-page-settings
  .settings-header
    %h4
      = _('Status Page')
    %button.btn.js-settings-toggle{ type: 'button' }
      = _('Expand')
    %p
      = _('Configure file storage settings to link issues in this project to an external status page.')
      = link_to _('More information'), help_page_path('user/project/operations/status_page'), target: '_blank', rel: 'noopener noreferrer'
  .settings-content
    .js-status-page-form{ data: { list_projects_endpoint: project_error_tracking_projects_path(@project, format: :json),
        operations_settings_endpoint: project_settings_operations_path(@project),
        project: error_tracking_setting_project_json,
        api_host: setting.api_host,
        enabled: setting.enabled.to_json,
        token: setting.token.present? ? '*' * 12 : nil } }
