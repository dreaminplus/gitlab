- breadcrumb_title s_('AccessTokens|Access Tokens')
- page_title _('Project Access Tokens')
- @content_class = "limit-container-width" unless fluid_layout

.row.prepend-top-default
  .col-lg-4.profile-settings-sidebar
    %h4.prepend-top-0
      = page_title
    %p
      = _('You can generate an access token scoped to this project for each application that needs access to the GitLab API.')
    %p
      = _('You can also use project access tokens to authenticate against Git over HTTP.')

  .col-lg-8
    - if @new_project_access_token
      = render 'created_container', new_token_value: @new_project_access_token

    = render 'form', path: project_settings_access_tokens_path(@project), token: @project_access_token, scopes: @scopes

    = render 'table', active_tokens: @active_project_access_tokens, inactive_tokens: @inactive_project_access_tokens
