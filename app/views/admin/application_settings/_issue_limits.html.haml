= form_for @application_setting, url: network_admin_application_settings_path(anchor: 'js-issue-limits-settings'), html: { class: 'fieldset-form' } do |f|
  = form_errors(@application_setting)

  %fieldset
    .form-group
      = f.label :issues_create_limit, 'Max requests per second per user', class: 'label-bold'
      = f.number_field :issues_create_limit, class: 'form-control'

    .form-group
      = f.label :issues_create_limit_users_whitelist_raw, class: 'label-bold' do
        = _('Whitelist to allow users unlimited issue creation request per minute')
      = f.text_area :issues_create_limit_users_whitelist_raw, placeholder: "user1, user2, user3", class: 'form-control', rows: 6
      %span.form-text.text-muted
        = _("When the current user's username is included in this list, the rate limit will not apply for this user.")

  = f.submit 'Save changes', class: "btn btn-success", data: { qa_selector: 'save_changes_button' }
