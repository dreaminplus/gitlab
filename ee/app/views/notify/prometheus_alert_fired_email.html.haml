%p
  An alert has been triggered in #{@alert.project_full_path}.

- if description = @alert.description
  %p
    Description: #{description}

- if env_name = @alert.environment_name
  %p
    Environment: #{env_name}

- if metric_query = @alert.metric_query
  %p
    Metric:

    %pre
      = metric_query

%p
  - if @alert.generic_alert?
    = _("View incident issues at ")
    = link_to(nil, @alert.incident_issues_link)
  - else
    = link_to(_('View performance dashboard.'), @alert.performance_dashboard_link)

