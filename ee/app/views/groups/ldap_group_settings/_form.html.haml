%section.ldap-group-links
  = form_for(group, url: group_ldap_settings_url(group), method: :put) do |f|
    .form-holder
      - if ::Gitlab::CurrentSettings.allow_group_owners_to_manage_ldap
        .form-group.row
          .col-sm-8
            .form-check
              = f.check_box :lock_membership_to_ldap, class: 'form-check-input'
              = f.label :lock_membership_to_ldap, class: 'form-check-label' do
                = _('Lock membership of this group to LDAP')
          .col-sm-2
            = f.submit _('Save'), class: 'btn btn-success qa-save'
