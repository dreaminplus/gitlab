= form_for [@group, @iteration], html: { class: 'milestone-form common-note-form js-quick-submit js-requires-input' } do |f|
  .row
    .col-md-6
      .form-group.row
        .col-form-label.col-sm-2
          = f.label :title, "Title"
        .col-sm-10
          = f.text_field :title, maxlength: 255, class: "form-control", required: true, autofocus: true
      .form-group.row.milestone-description
        .col-form-label.col-sm-2
          = f.label :description, "Description"
        .col-sm-10
          = render layout: 'projects/md_preview', locals: { url: group_preview_markdown_path } do
            = render 'projects/zen', f: f, attr: :description, classes: 'note-textarea', placeholder: 'Write iteration description...', supports_autocomplete: false
          .clearfix
          .error-alert
    = render "shared/milestones/form_dates", f: f

  .form-actions
    - if @iteration.new_record?
      = f.submit 'Create milestone', class: "btn-success btn"
      = link_to "Cancel", group_iterations_path(@group), class: "btn btn-cancel"
    - else
      = f.submit 'Update milestone', class: "btn-success btn"
      = link_to "Cancel", group_iteration_path(@group, @iteration), class: "btn btn-cancel"
